<div id="page-container">
	<% unless current_user %>
		<div class="row-fluid signup-top">
			<div id="choose" class="span6">
				<%= button_to "Login", new_user_session_path, :id => 'file_field_button_reg', :method=> 'get'%>
			</div>
			<div id="choose" class="span6">
				<%= button_to "Join Inspire Me", new_user_registration_path, :id => 'file_field_button', :method=> 'get'%>
			</div>
		</div>
	<% end %>
	<h1><%=@inspiration.content%></h1>
	<div class="fb-like" data-href="http://frozen-cove-1468.herokuapp.com/inspirations/<%=@inspiration.id%>" data-send="true" data-width="450" data-show-faces="true"></div>
	<div id='container'>
	  <% @photos.each do |photo| %>
	    <div class='item'>
	      <%= render :partial => '/shared/photo', :locals => {:photo => photo} %>
	    </div>
	  <% end %>
	</div>
	<script> function sendRequestViaMultiFriendSelector() {
	  FB.ui({method: 'apprequests',
	    message: 'My Great Request'
	  }, requestCallback);
	} </script>
</div>



<% if current_user %>
	<%= render :partial => 'photos/form', :locals => {:inspiration => @inspiration} %>
<% else %>
	<div class="photo-form">
		<div id="choose">
			<%= button_to "Add your photo", new_user_registration_path, :id => 'file_field_button', :method=> 'get'%>
		</div>
	</div>
<% end %>


